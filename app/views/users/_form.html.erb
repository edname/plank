
    <%= render "shared/errors", object: @user %>

    <%= form_with model: @user do |f| %>

        <div class="form-group">
            <%= f.label :Name, "Name" %>
            <%= f.text_field :name, :class => 'form-control', required: true, minlength: 2, placeholder: "Name" %>
        </div>

        <div class="form-group">
            <%= f.label :Email, "Email" %>
            <%= f.email_field :email, :class => 'form-control', required: true, placeholder: "E-mail" %>
        </div>

        <div class="form-group">
            <%= f.label :password, "Password" %>
            <%= f.password_field :password, :class => 'form-control', required: true, minlength: 2 %>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, "Password confirmation" %>
            <%= f.password_field :password_confirmation, :class => 'form-control', required: true %>
        </div>

        <%= f.submit :class => 'btn btn-primary mt-2' %>
    <% end %>