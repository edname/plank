

    <% provide :page_title, "User edit" %>
    <% currently_at "Users" %>

    <div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">User edit</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
        </div>
    </div>

    <%= render "shared/errors", object: @user %>

    <%= form_with model: @user do |f| %>

        <div class="form-group">
            <%= f.label :Username, "Username" %>
            <%= f.text_field :Username, :class => 'form-control', required: true, minlength: 2, placeholder: "Username" %>
        </div>

        <div class="form-group">
            <%= f.label :Email, "Email" %>
            <%= f.email_field :email, :class => 'form-control', required: true, placeholder: "E-mail" %>
        </div>

        <%= f.submit :class => 'btn btn-primary mt-2' %>
    <% end %>