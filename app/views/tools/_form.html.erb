
<%= render "shared/errors", object: @tool %>

<%= form_with model: @tool do |f| %>
    <div class="form-group">
        <%= f.label :Name, "Name" %>
        <%= f.text_field :name, :class => 'form-control', required: true, placeholder: "Name" %>
    </div>

    <div class="form-group">
        <%= f.label :Body, "Body" %>
        <%= f.text_area :body, :class => 'form-control' %>
    </div>

    <%= f.submit "Submit", :class => 'form-control', disable_with: 'Submiting...' %>

<% end %>