

    <% provide :page_title, "Tools" %>
    <% currently_at "Tools" %>

    <div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Tools</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <%= button_to "New tool", new_tool_path, :method => "get", :class => 'btn btn-sm btn-outline-secondary' %>
                <%= button_to "View PDF", tools_path(@tool, format: "pdf"), form: {target: '_blank'}, :method => "get", :class => 'btn btn-sm btn-outline-secondary' %>
            </div>
        </div>
    </div>

    <%= render "shared/flash" %>

    <%== pagy_bootstrap_nav @pagy %>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Body</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @tools.each do |tool| %>
            <tr>
                <th scope="row"><%= tool.id %></th>
                <td><%= tool.name %></td>
                <td><%= tool.body %></td>
                <td><%= nav_tab "Show", tool_path(tool), :method => "get", :class => 'btn btn-sm btn-outline-primary' %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
