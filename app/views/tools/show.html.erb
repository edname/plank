
    <% provide :page_title, "Tool" %>
    <% currently_at "Tools" %>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><%=@tool.name %></h5>
            <p class="card-text"><%= sanitize @tool.body %></p>
        </div>
    </div> 

    <%= render "tool_variants/form" %>


    <div class="card my-3">
        <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Status</th>
                <th scope="col">Work hours</th>
                <th scope="col">Rent count</th>
                <th scope="col">Notes</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            <%= render partial: "tool_variants/tool", collection: @tool_variants, as: :tool_variant, locals: {tool: @tool} %>
            </tbody>
        </table>
    </div>
    </div>
