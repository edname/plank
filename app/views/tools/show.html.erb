
    <% provide :page_title, "Tool variants" %>
    <% currently_at "Tools" %>

    <div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><%=@tool.name %> variants</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <%= button_to "New variant", new_tool_tool_variant_path(@tool), :method => "get", :class => 'btn btn-sm btn-outline-secondary' %>
                <%= button_to "Back", tools_path, :method => "get", :class => 'btn btn-sm btn-outline-secondary' %>
            </div>
        </div>
    </div>

    <div class="card my-3">
        <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Status</th>
                <th scope="col">Work hours</th>
                <th scope="col">Rent count</th>
                <th scope="col">Notes</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            <%= render partial: "tool_variants/tool", collection: @tool_variants, as: :tool_variant, locals: {tool: @tool} %>
            </tbody>
        </table>
    </div>
    </div>
