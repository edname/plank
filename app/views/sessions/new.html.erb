
    <% provide :page_title, "Log In" %>
    <% currently_at "Log In" %>

    <div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Log In</h1>
    </div>

    <%= render "shared/flash" %>

    <%= form_with url: session_path do |f| %>

        <div class="form-group">
            <%= f.label :Email, "Email" %>
            <%= f.email_field :email, :class => 'form-control', placeholder: "E-mail" %>
        </div>

        <div class="form-group">
            <%= f.label :password, "Password" %>
            <%= f.password_field :password, :class => 'form-control', minlength: 2 %>
        </div>

        <%= f.submit "Sign In!", :class => 'btn btn-primary mt-2' %>
    <% end %>    