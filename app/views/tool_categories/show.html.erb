
    <% provide :page_title, "Tool category list" %>
    <% currently_at "Tools" %>

    <div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><%=@tool_category.name %> list</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <%= button_to "New list", new_tool_list_path(@tool_list), :method => "get", :class => 'btn btn-sm btn-outline-secondary' %>
                <%= button_to "Back", tool_categories_path, :method => "get", :class => 'btn btn-sm btn-outline-secondary' %>
            </div>
        </div>
    </div>

    <%= render "shared/flash" %>

    <div class="card my-3">
        <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">Tool lists</th>
                <th scope="col">Category</th>
                <th scope="col">Numbers</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            <%= render partial: "tool", collection: @tool_lists, as: :tool_list, locals: {tool_category: @tool_category} %>
            </tbody>
        </table>
    </div>
    </div>
