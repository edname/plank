
    <% provide :page_title, "Tool number" %>
    <% currently_at "Tools" %>

    <div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2"><%=@tool_list.name %> number</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <%= button_to "New number", new_tool_list_tool_number_path(@tool_list), :method => "get", :class => 'btn btn-sm btn-outline-secondary' %>
                <%= button_to "Back", tool_lists_path, :method => "get", :class => 'btn btn-sm btn-outline-secondary' %>
            </div>
        </div>
    </div>

    <%= form_with :class => "form row my-3", model: [@tool_list, @tool_number] do |f| %>
        <div class="col-3">
            <%= f.text_field :number, :class => 'form-control' %>
        </div>
        <div class="col">
            <%= f.submit 'New number', :class => 'btn btn-secondary' %>
        </div>
    <% end %>




    <div class="card my-3">
        <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Status</th>
                <th scope="col">Work hours</th>
                <th scope="col">Rent count</th>
                <th scope="col">Notes</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            <%= render partial: "tool_numbers/tool", collection: @tool_numbers, as: :tool_number, locals: {tool_list: @tool_list} %>
            </tbody>
        </table>
    </div>
    </div>
