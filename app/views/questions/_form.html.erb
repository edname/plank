
    <%= render "shared/errors", object: @question %>

    <%= form_with model: @question do |f| %>
        <div class="form-group">
            <%= f.label :Title, "Title" %>
            <%= f.text_field :title, :class => 'form-control', required: true, minlength: 2, placeholder: "Title" %>
        </div>

        <div class="form-group">
            <%= f.label :Body, "Body" %>
            <%= f.text_area :body, :class => 'form-control' %>
        </div>

        <%= f.submit :class => 'btn btn-primary mt-2' %>
    <% end %>