
    <% provide :page_title, "Question" %>
    <% currently_at "Questions" %>

    <div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h5">Question</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <%= nav_tab "Edit", edit_question_path(@question), :method => "get", :class => 'btn btn-sm btn-outline-secondary' %>
                <%= nav_tab "Delete", question_path(@question), :method => "delete", :class => 'btn btn-sm btn-outline-danger', form: {data: {confirm: "Are you sure?"}} %>
                <%= nav_tab "Back", questions_path, :method => "get", :class => 'btn btn-sm btn-outline-dark' %>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><%=@question.title %></h5>
            <p class="card-text"><%= sanitize @question.body %></p>
            <p class="card-text"><small class="text-muted">Created: <%= @question.formatted_created_at %></small></p>
        </div>
    </div>


    <div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h5">Answer</h1>
    </div>

    <%= render "answers/form" %>

    <% if @answers.any? %>
        <div class="card my-3">
            <ul class="list-group list-group-flush">
                <%= render partial: "answers/answer", collection: @answers, as: :answer, locals: {question: @question} %>
            </ul>
        </div>
    <% end %>

    <%== pagy_bootstrap_nav @pagy %>
    
